    .toggle-input:checked ~ .toggle-switch {
        position: relative;
        width: 40px;
        height: 40px;
        margin-left: 0px;
        background-color: #7611a680;
        border: 4px solid #7711a6cf;
        border-radius: 50%;
        transition: all 0.1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .toggle-input:checked ~ .toggle-bg {
        background-color: #1a202e97;
        border-color: #1a202e;
    }

    .toggle-input:checked ~ .toggle-switch .toggle-switch-figure {
        margin-left: 40px;
        opacity: 0;
        transform: scale(0.1);
    }

    .toggle-input:checked ~ .toggle-switch .toggle-switch-figureAlt {
        transform: scale(1);
    }
    @media (min-width: 768px) {
        .wrapper {
            bottom: 30px;
            right: 50px;
        }
    }
</style>

<script is:inline>
    console.log("Client script loading...");

    // This script will run after the component is hydrated on the client
    const toggle = document.querySelector(".toggle-input");
    console.log("Toggle element:", toggle);

    if (!toggle) {
        console.error("Toggle input element not found even with client:load");
    }

    // Get initial state from localStorage
    const initialState = localStorage.getItem("toggleState") === "true";
    toggle.checked = initialState;
    console.log("Initial state set to:", initialState);

    // Dispatch initial state event
    setTimeout(() => {
        console.log("Dispatching initial animation state:", !initialState);
        document.dispatchEvent(
            new CustomEvent("animationStateChanged", {
                detail: { isAnimating: !initialState },
            }),
        );
    }, 100);

    // Listen for changes
    toggle.addEventListener("change", function () {
        localStorage.setItem("toggleState", String(toggle.checked));
        console.log("Change state to:", toggle.checked);

        document.dispatchEvent(
            new CustomEvent("animationStateChanged", {
                detail: { isAnimating: !toggle.checked },
            }),
        );
    });
</script>
