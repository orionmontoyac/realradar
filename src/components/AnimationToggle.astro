<div class="wrapper">
    <div class="toggle">
        <input class="toggle-input" type="checkbox" />
        <div class="toggle-bg"></div>
        <div class="toggle-switch">
            <div class="toggle-switch-figure"></div>
            <div class="toggle-switch-figureAlt"></div>
        </div>
    </div>
</div>

<style>
    .wrapper {
        position: fixed;
        bottom: 50px;
        right: -10px;
        z-index: 1000;
        width: 200px;
        overflow: hidden;
        cursor: pointer;
    }

    .toggle {
        position: relative;
        display: inline-block;
        width: 100px;
        margin-left: 20px;
        padding: 4px;
        border-radius: 40px;
        cursor: pointer;
    }

    .toggle:before,
    .toggle:after {
        content: "";
        display: table;
    }

    .toggle:after {
        clear: both;
    }

    .toggle-bg {
        position: absolute;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        background-color: #1a202e97;
        border-radius: 40px;
        border: 4px solid #1a202e;
        transition: all 0.1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .toggle-input {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 1px solid red;
        border-radius: 40px;
        z-index: 2;
        opacity: 0;
    }
    /* Sun */
    .toggle-switch {
        position: relative;
        width: 40px;
        height: 40px;
        margin-left: 50px;
        background-color: #7711a6cf;
        border: 4px solid #7711a6cf;
        border-radius: 50%;
        transition: all 0.1s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }
    /* Sun Cloud */
    .toggle-switch-figure {
        position: absolute;
        bottom: -14px;
        left: -50px;
        display: block;
        width: 80px;
        height: 30px;
        border: 8px solid #7711a6;
        border-radius: 20px;
        background-color: #7711a6;
        transform: scale(0.4);
        transition: all 0.12s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        animation: cloud-bounce 1.6s ease-in-out infinite alternate;
    }

    @keyframes cloud-bounce {
        0% {
            bottom: -10px;
        }
        50% {
            bottom: -20px;
        }
        100% {
            bottom: -10px;
        }
    }
    /* Sun Cloud 2 */
    .toggle-switch-figure:after {
        content: "";
        display: block;
        position: relative;
        top: -65px;
        right: -42px;
        width: 15px;
        height: 15px;
        border: 8px solid #7711a6;
        border-radius: 100%;
        border-right-color: transparent;
        border-bottom-color: transparent;
        transform: rotateZ(70deg);
        background-color: #7711a6;
    }
    /* Sun Cloud 3 */
    .toggle-switch-figure:before {
        content: "";
        display: block;
        position: relative;
        top: -25px;
        right: -10px;
        width: 30px;
        height: 30px;
        border: 8px solid #7711a6;
        border-radius: 100%;
        border-right-color: transparent;
        border-bottom-color: transparent;
        transform: rotateZ(30deg);
        background-color: #7711a6;
    }
